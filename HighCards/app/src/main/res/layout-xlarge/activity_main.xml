<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.martins.highcards.app.example.martins.highcards.MainActivity"
    android:background="@drawable/backmain"
    android:layout_gravity="center">


    <ImageButton
        android:background="@drawable/maumau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="button_play_clicked" />

    <Button
        android:background="@drawable/seta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeLeft"
        android:onClick="buttonLeftClicked"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <Button
        android:background="@drawable/seta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipeRight"
        android:onClick="buttonRightClicked"
        android:layout_alignBaseline="@+id/swipeLeft"
        android:layout_alignBottom="@+id/swipeLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pauseButton"
        android:background="@drawable/pause_button"
        android:onClick="pauseClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11sp"
        android:layout_marginEnd="11sp"
        android:layout_marginBottom="11sp" />

</RelativeLayout>
